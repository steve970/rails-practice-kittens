<% if @categorization.errors.present? %>

  <% @categorization.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>



<div class="row">

  <%= form_for [@kitten, @categorization], html: {class: "form-inline" }  do |f| %>
    <%= image_tag @kitten.image %>
    <%= f.collection_select(:category_id, Category.all, :id, :name, {prompt: 'Please choose a category...'}, {class: 'form-control'}) %>
    <%= f.submit "Add Category" %>
  <% end %>
  
</div>
